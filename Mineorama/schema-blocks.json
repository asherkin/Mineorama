{
  "$id": "schema-blocks.json",
  "$schema": "http://json-schema.org/draft-04/schema",
  "additionalProperties": false,
  "patternProperties": {
    "^.+$": {
      "properties": {
        "color": {
          "items": {
            "pattern": "^[0-9a-f]{6}$",
            "type": "string"
          },
          "minItems": 1,
          "pattern": "^[0-9a-f]{6}$",
          "type": [
            "array",
            "string"
          ]
        }
      },
      "required": [
        "color"
      ],
      "type": "object"
    }
  },
  "type": "object"
}